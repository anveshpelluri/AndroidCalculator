<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nagaa.calculator.NormalCal"
    android:gravity="bottom"
    android:id="@+id/activity1"
    >


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >  </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linlay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="175dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="50dp"
            android:onClick="btn1"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="50dp"
            android:onClick="btn2"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="50dp"
            android:onClick="btn3"/>

        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@color/red"
            android:textSize="50sp"
            android:onClick="btn4"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linlay1">

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="50dp"
            android:onClick="btn5"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="50dp"
            android:onClick="btn6"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="50dp"
            android:onClick="btn7"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="50dp"
            android:onClick="btn8"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linlay2">

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="50dp"
            android:onClick="btn9"/>

        <Button
            android:id="@+id/btn10"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="50dp"
            android:onClick="btn10"/>

        <Button
            android:id="@+id/btn11"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="50dp"
            android:onClick="btn11"/>

        <Button
            android:id="@+id/btn12"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="50dp"
            android:onClick="btn12"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linlay3">

        <Button
            android:id="@+id/btn13"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="50dp"
            android:onClick="btn13"/>


        <Button
            android:id="@+id/btn14"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="50dp"
            android:onClick="btn14"/>

        <Button
            android:id="@+id/btn15"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="50dp"
            android:onClick="btn15"/>

        <Button
            android:id="@+id/btn16"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textSize="50dp"
            android:text="="
            android:onClick="btn16"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="top"
        android:text="    "
        android:textAlignment="gravity"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="55dp"
        android:gravity="right"
        android:textStyle="bold"
        android:text=" "
        android:textAlignment="gravity"
        android:textSize="50dp" />



</RelativeLayout>
